# ===========================================
# IVL Baseball League - Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env to version control
# ===========================================

# Application Settings
APP_ENV=development              # development or production
APP_DEBUG=true                   # Show detailed errors (disable in production)
APP_NAME="IVL Baseball League"
APP_URL=http://localhost
APP_TIMEZONE=America/New_York

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=leaguemanager
DB_USERNAME=root
DB_PASSWORD=

# Mail Configuration
# MAIL_DRIVER options: smtp, mail (native), log (for testing)
MAIL_DRIVER=mail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ivlbaseball.com
MAIL_FROM_NAME="IVL Baseball League"

# Session Configuration
SESSION_TIMEOUT=7200             # Session timeout in seconds (2 hours)
SESSION_COOKIE_HTTPONLY=true     # Prevent JavaScript access to cookies
SESSION_COOKIE_SECURE=false      # Set to true when using HTTPS

# Security Settings
CSRF_TOKEN_LENGTH=32
PASSWORD_HASH_COST=12            # bcrypt cost (10-15 recommended)
LOGIN_MAX_ATTEMPTS=5             # Max failed logins before lockout
LOCKOUT_DURATION=900             # Lockout time in seconds (15 minutes)

# Logging Configuration
LOG_LEVEL=debug                  # debug, info, notice, warning, error, critical
LOG_ACCESS=true                  # Log all HTTP requests
LOG_CHANNEL=file                 # file or database

# Two-Factor Authentication
REQUIRE_2FA_FOR_ADMIN=true       # Require 2FA for admin/superuser roles
TOTP_ISSUER="IVL Baseball"       # Name shown in authenticator app

# File Upload Settings
UPLOAD_MAX_SIZE=5242880          # Max upload size in bytes (5MB)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Optional Features
ENABLE_SMS=false                 # Enable SMS notifications (requires Twilio)
ENABLE_PAYMENTS=false            # Enable payment processing (requires Stripe)
ENABLE_MAINTENANCE=false         # Put site in maintenance mode

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100          # Max requests
RATE_LIMIT_WINDOW=60             # Per X seconds

# External Services (for future use)
# TWILIO_SID=
# TWILIO_TOKEN=
# TWILIO_FROM=
# STRIPE_KEY=
# STRIPE_SECRET=
# STRIPE_WEBHOOK_SECRET=

# ===========================================
# Production Checklist:
# - Set APP_ENV=production
# - Set APP_DEBUG=false
# - Set SESSION_COOKIE_SECURE=true
# - Configure SMTP credentials
# - Enable HTTPS
# - Run composer install --no-dev
# - Clear all cache files
# ===========================================
